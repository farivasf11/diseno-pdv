<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="elevation">10dp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/text_principal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MaterialButtonIcon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="backgroundTint">@color/material_button_icon_colors</item>
        <item name="iconTint">@color/material_button_icon_colors</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
    </style>

    <style name="MaterialButtonCategorias" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="backgroundTint">@color/material_button_background_color</item>
        <item name="iconTint">@color/material_button_background_color</item>
        <item name="android:textColor">@color/material_button_text_color</item>
        <item name="strokeColor">@color/blue_main</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
    </style>

    <style name="MaterialButtonPrincipal" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="backgroundTint">@color/material_button_background_color</item>
        <item name="iconTint">@color/material_button_background_color</item>
        <item name="android:textColor">@color/gris_fuerte</item>
        <item name="strokeColor">@color/blue_main</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TitleActivitiesStyle" parent="">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/text_principal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayCardCustom</item>
    </style>

    <style name="ShapeAppearanceOverlayCardCustom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>
</resources>