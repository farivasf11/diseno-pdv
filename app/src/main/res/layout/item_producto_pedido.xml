<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/layout_producto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:weightSum="1"
    android:background="@drawable/item_pedido_state_selector"
    android:paddingVertical="3dp">
    <TextView
        android:id="@+id/cantidad_producto_pedido"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="14sp"
        android:textColor="@color/text_principal"
        android:text="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center"/>
    <TextView
        android:id="@+id/nombre_producto_pedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="14sp"
        android:textColor="@color/text_principal"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Torta Cubana"/>
    <TextView
        android:id="@+id/precio_producto_pedido"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="14sp"
        android:gravity="end"
        android:paddingRight="10dp"
        android:textColor="@color/text_principal"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="$55"/>
    <View
        android:id="@+id/separador_producto"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/borde_inputs"/>
    <LinearLayout
        android:id="@+id/opciones_adicionales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"/>
</LinearLayout>