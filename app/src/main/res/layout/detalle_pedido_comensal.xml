<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_pedido_comensal"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:showIn="@layout/inicial_captura_pedido">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/atras_pedido"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cornerRadius="30dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            app:iconGravity="textStart"
            android:padding="0dp"
            app:iconPadding="4dp"
            app:iconTint="@null"
            android:foregroundTint="@color/black"
            android:visibility="visible"
            app:strokeColor="@color/white"
            app:icon="@drawable/indicator_back"/>

        <EditText
            android:id="@+id/nombre_comensal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:background="@drawable/nombre_comensal"
            android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ1234567890 "
            android:fontFamily="@font/montserrat_bold"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLength="20"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Comensal 1"
            android:textColor="@color/text_principal"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/avanzar_pedido"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cornerRadius="30dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            app:iconGravity="textStart"
            android:padding="0dp"
            app:iconPadding="-4dp"
            app:iconTint="@null"
            app:strokeColor="@color/white"
            android:visibility="visible"
            app:icon="@drawable/indicator_next"/>
    </LinearLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_pedidos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16sp"
            android:text="Productos"/>
        <TextView
            android:id="@+id/productos_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/blue_main"
            android:text="3" />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16sp"
            android:text="Importe"/>
        <TextView
            android:id="@+id/importe_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16sp"
            android:textColor="@color/blue_main"
            android:layout_marginHorizontal="10dp"
            android:text="$126"/>
    </LinearLayout>
</LinearLayout>
