<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_pedido_comensal"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:showIn="@layout/inicial_captura_pedido">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cornerRadius="30dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            app:iconGravity="textStart"
            android:padding="0dp"
            app:iconPadding="0dp"
            app:iconTint="@null"
            android:foregroundTint="@color/black"
            android:visibility="visible"
            app:strokeColor="@color/white"
            app:icon="@drawable/indicator_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/text_principal"
            android:textSize="16sp"
            android:layout_marginHorizontal="60dp"
            android:text="Comensal 1"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cornerRadius="30dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            app:iconGravity="textStart"
            android:padding="0dp"
            app:iconPadding="0dp"
            app:iconTint="@null"
            app:strokeColor="@color/white"
            android:visibility="visible"
            app:icon="@drawable/indicator_next"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_pedido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:clickable="true"
        android:layout_margin="5dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_pedido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@color/gris_claro"
            android:overScrollMode="never">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16sp"
            android:text="Productos"/>
        <TextView
            android:id="@+id/productos_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/blue_main"
            android:text="3" />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16sp"
            android:text="Importe"/>
        <TextView
            android:id="@+id/importe_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16sp"
            android:textColor="@color/blue_main"
            android:layout_marginHorizontal="10dp"
            android:text="$126"/>
    </LinearLayout>
</LinearLayout>
