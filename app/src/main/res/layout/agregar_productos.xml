<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout_agregar_productos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/inicial_captura_pedido">
    <LinearLayout
        android:id="@+id/sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="58dp">
        <LinearLayout
            android:id="@+id/draggable_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:gravity="center">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/borde_inputs"/>
            <View
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_principal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="Agregar Productos"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lista_productos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:weightSum="1"
            android:layout_marginHorizontal="15dp">
            <EditText
                android:id="@+id/buscador_productos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/search"
                android:drawablePadding="10dp"
                android:hint="Buscar"
                android:fontFamily="@font/montserrat_medium"
                android:background="@drawable/search_input"
                android:maxLines="1"
                android:maxLength="50"
                android:padding="5dp"
                android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ1234567890 "/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_categorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_marginTop="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_listado_productos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:overScrollMode="never"
                android:paddingVertical="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:weightSum="2">
                <com.google.android.material.button.MaterialButton
                    style="@style/MaterialButtonPrincipal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cornerRadius="6dp"
                    android:textSize="16sp"
                    android:text="Comentario"
                    android:fontFamily="@font/montserrat_bold"
                    android:textAllCaps="false"
                    android:enabled="false"
                    android:layout_marginRight="10dp"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/MaterialButtonPrincipal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cornerRadius="6dp"
                    android:textSize="16sp"
                    android:text="Agregar"
                    android:fontFamily="@font/montserrat_bold"
                    android:enabled="false"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>