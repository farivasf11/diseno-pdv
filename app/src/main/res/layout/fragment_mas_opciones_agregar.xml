<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alexis.fragments.MasOpcionesAgregar"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/white"
    android:clickable="true"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Torta cubana"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <com.google.android.material.button.MaterialButton
                style="@style/MaterialButtonIcon"
                android:id="@+id/disminuirComensal"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cornerRadius="6dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="0dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@null"
                app:icon="@drawable/minus_icon"/>
            <TextView
                android:id="@+id/numeroComensales"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="36sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginHorizontal="5dp"/>
            <com.google.android.material.button.MaterialButton
                style="@style/MaterialButtonIcon"
                android:id="@+id/aumentarComensal"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:cornerRadius="6dp"
                app:iconTint="@null"
                app:icon="@drawable/plus_icon"
                app:iconGravity="textStart"
                app:iconPadding="0dp" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/card_bordes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            style="@style/MaterialButtonPrincipal"
            android:id="@+id/elegir_variante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="6dp"
            android:textSize="16sp"
            android:text="Elegir variante"
            android:fontFamily="@font/montserrat_medium"
            android:textAllCaps="false"
            android:enabled="true"
            android:layout_marginBottom="10dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/MaterialButtonPrincipal"
            android:id="@+id/agregar_ingrediente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="6dp"
            android:textSize="16sp"
            android:text="Agregar ingrediente extra"
            android:fontFamily="@font/montserrat_medium"
            android:textAllCaps="false"
            android:enabled="true"
            android:layout_marginBottom="10dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/MaterialButtonPrincipal"
            android:id="@+id/agregar_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="6dp"
            android:textSize="16sp"
            android:text="Agregar comentario adicional"
            android:fontFamily="@font/montserrat_medium"
            android:enabled="true"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>